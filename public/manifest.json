{
  "manifest_version": 3,

  "name": "And Another AI Applier",
  "description": "And Another AI Applier that utilizes Google Chrome's built-in Gemini Nano to autofill job application forms.",
  "version": "0.0.1",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "sidePanel",
    "activeTab",
    "scripting",
    "tabs"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
